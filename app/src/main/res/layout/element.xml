<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/list_linearLayout">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="84dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:cardBackgroundColor="#9AD0BF"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp" android:layout_marginTop="10dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Element 1"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/element_textView_title"
                    android:textSize="18sp" android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-thin" android:typeface="sans"
                    android:textAllCaps="false" android:lineSpacingExtra="12sp" tools:text="@tools:sample/cities"/>
            <TextView
                    android:text="This is the description for element 1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/element_textView_description"
                    android:textSize="14sp" android:lineSpacingExtra="10sp"
                    android:textColor="@android:color/black" android:fontFamily="sans-serif-light"
                    android:typeface="sans"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
